#include <iostream>
#include <iomanip>
using namespace std;
 
int main() {
    int N;
    float a,b,c;
    cin >> N;
    for (int i=0; i<N; i++) {
        cin >> a >> b >> c;
        float weighted_averages = (a * 2 + b * 3 + c * 5)/10;
        cout << fixed << setprecision(1) << weighted_averages << endl;
    }
  
 
    return 0;
}
